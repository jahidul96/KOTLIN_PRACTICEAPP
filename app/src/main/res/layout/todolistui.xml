<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/topTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/red"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todo App"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/white"

            />
    </LinearLayout>



    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/firstCard"
        android:layout_below="@id/topTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast today"
                android:layout_weight="0.5"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="Edit"
                android:textStyle="bold"
                android:textSize="10sp"
                android:backgroundTint="@color/black"
                android:layout_marginRight="8dp"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Delete"
                android:textStyle="bold"
                android:textSize="10sp"
                android:backgroundTint="@color/red"
                />
        </LinearLayout>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/secondCard"
        android:layout_below="@id/firstCard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Football match"
                android:layout_weight="0.5"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="Edit"
                android:textStyle="bold"
                android:textSize="10sp"
                android:backgroundTint="@color/black"
                android:layout_marginRight="8dp"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Delete"
                android:textStyle="bold"
                android:textSize="10sp"
                android:backgroundTint="@color/red"
                />
        </LinearLayout>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/thirdCard"
        android:layout_below="@id/secondCard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday Outing"
                android:layout_weight="0.5"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="Edit"
                android:textStyle="bold"
                android:textSize="10sp"
                android:backgroundTint="@color/black"
                android:layout_marginRight="8dp"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Delete"
                android:textStyle="bold"
                android:textSize="10sp"
                android:backgroundTint="@color/red"
                />
        </LinearLayout>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>



    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/forthCard"
        android:layout_below="@id/thirdCard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Something doing"
                android:layout_weight="0.5"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="Edit"
                android:textStyle="bold"
                android:textSize="10sp"
                android:backgroundTint="@color/black"
                android:layout_marginRight="8dp"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Delete"
                android:textStyle="bold"
                android:textSize="10sp"
                android:backgroundTint="@color/red"
                />
        </LinearLayout>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>





    <!--    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10dp"

        >

        <EditText
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:hint="Your Todos"
            android:paddingLeft="8dp"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Add"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

</RelativeLayout>